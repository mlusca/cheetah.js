{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2021",
    //        "lib": ["es2022"],
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false,
    "allowJs": false,
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {
      "@cheetah.js/core": ["./packages/core"],
      "@cheetah.js/core/*": ["./packages/core/src/*"],
      "@cheetah.js/schedule": ["./packages/schedule"],
      "@cheetah.js/schedule/*": ["./packages/schedule/src/*"],
      "@cheetah.js/orm": ["./packages/orm"],
      "@cheetah.js/orm/*": ["./packages/orm/src/*"],
      "@cheetah.js/swagger": ["./packages/swagger"],
      "@cheetah.js/swagger/*": ["./packages/swagger/src/*"]
    },
    "types": ["bun-types"]
  },
  "exclude": ["node_modules", "**/*.spec.ts", "**/dist"],
  "include": ["packages/**/*"]
}
